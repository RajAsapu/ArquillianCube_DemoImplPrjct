<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
  http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <extension qualifier="docker">
        <property name="serverVersion">1.12.3</property>
        <property name="serverUri">http://localhost:2375</property>
        <property name="dockerRegistry">http://jfrog.aws.wfscorp.com/artifactory/docker/docker-dev-local/</property>
        <!--<property name="username">rasapu</property>-->
        <!--<property name="password">Sekhar@123</property>-->
        <property name="clean">true</property>
        <property name="dockerContainersFile">src/test/resources/docker-compose.yml</property>
        <property name="definitionFormat">CUBE</property>
        <property name="cleanBuildImage">true</property>
        <property name="connectionMode">STARTORCONNECTANDLEAVE</property>
        <!--<property name="autoStartContainers">custom:setup.AutoStartContainersOrder</property>-->
        <property name="autoStartContainers">jui</property>
        <property name="cubeSpecificProperties">
            jdatabase:
                await:
                    strategy: log
                    match: 'DSE startup complete'
                    sleepPollingTime: 5 s
                    iterations: 20
                    timeout: 1800
            jservice:
                await:
                    strategy: http
                    match: 'startup'
                    responseCode: 200
                    url: http://localhost:8080/swagger-ui.html
                    sleepPollingTime: 5 s
                    iterations: 20
                    timeout: 1800
            jui:
                await:
                    strategy: polling
                    sleepPollingTime: 5 s
                    iterations: 5
                    timeout: 1800
            jdatamock:
                await:
                    strategy: log
                    match: 'Successfully connected'
                    sleepPollingTime: 5 s
                    iterations: 20
                    timeout: 1800
            jengine:
                await:
                    strategy: log
                    match: 'Initializing Spring FrameworkServlet'
                    sleepPollingTime: 5 s
                    iterations: 20
                    timeout: 1800
        </property>
    </extension>
</arquillian>